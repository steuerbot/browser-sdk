{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "__tests__", "dist"]
}
